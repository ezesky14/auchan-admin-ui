branch="$(git rev-parse --abbrev-ref HEAD)"

if [ "$branch" = "master" ] || [ "$branch" = "main" ]; then
  echo "You can't commit directly to master/main branch"
  exit 1
fi

pnpm lint
pnpm typecheck
pnpm exec lint-staged

if [ -z "$SKIP_TESTS" ]; then
  pnpm test
  if [ $? -ne 0 ]; then
    echo "Tests failed. Commit aborted."
    exit 1
  fi
fi
